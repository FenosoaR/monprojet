{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}
<a href="{{ path('item_add') }}">Ajouter un item</a>
    <table border="1">
        <thead>
            <th>Id</th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Voir</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </thead>
        <tbody>
           {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.titre}}</td>
                    <td>{{ item.contenu}}</td>
                    <td><a href="{{ path ('item_single', { slug : item.slug }) }}">Voir</a></td>
                    <td><a href="{{ path ('item_modify', {id : item.id }) }}">Modifier</a></td>
                    <td><a href="{{ path ('item_delete' , { id : item.id }) }}">Supprimer</a></td>
           {% endfor %}
        </tr>
        </tbody>

    </table>

{% endblock %}